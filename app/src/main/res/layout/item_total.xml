                android:id="@+id/tv_total_expired_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="40"
                android:drawableEnd="@drawable/ic_percentage"
                android:drawableTint="@color/white"
                android:drawablePadding="2dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextViewSold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top_title_percentage"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Vencida"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title_card"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_total_expired_percentage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_total_expired_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
