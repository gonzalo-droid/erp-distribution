<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:forceDarkAllowed" tools:tarjetApi="q" tools:targetApi="q">false</item>
    </style>

    <style name="RecyclerDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/white</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:scrollbars">none</item>
    </style>


    <!-- textView activities title -->
    <style name="TextViewTitleAcitivity" >
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTitleAcitivity.Dimen" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <!-- Dialog Title -->
    <style name="TitleDialogStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TitleDialogStyle.Dimen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <!-- Animaciones -->

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Buttom Dialog -->
    <style name="ButtonDialogStyle">
        <item name="android:background">@drawable/shape_border_button</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonDialogStyle.Dimen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

</resources>